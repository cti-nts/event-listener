{
    "name": "evdobe/event-listener",
    "description": "A process that listens to a domain event channel, translates and persists events of interest to an event store.",
    "authors": [
        {
            "name": "Konstantinos Togias",
            "email": "info@ktogias.gr"
        }
    ],
    "require": {
        "php-di/php-di": "^6.3",
        "doctrine/annotations": "^1.13",
        "enqueue/enqueue": "^0.10.15",
        "enqueue/rdkafka": "^0.10.15"
    },
    "autoload": {
        "psr-4": {
            "Infrastructure\\": "Infrastructure",
            "Application\\": "Application",
            "Domain\\": "Domain"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "behat/behat": "^3.10",
        "beberlei/assert": "^3.3",
        "curl/curl": "^2.3",
        "phpspec/prophecy": "^1.15"
    }
}
